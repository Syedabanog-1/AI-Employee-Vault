{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "D:\\syeda Gulzar Bano\\AI_Employee_Vault_"],
      "env": {}
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      }
    },
    "email": {
      "command": "node",
      "args": ["./mcp-servers/email-mcp/index.js"],
      "env": {
        "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
        "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}",
        "GOOGLE_REFRESH_TOKEN": "${GOOGLE_REFRESH_TOKEN}"
      }
    },
    "whatsapp": {
      "command": "python",
      "args": ["-u", "./mcp-servers/whatsapp-mcp/server.py"],
      "env": {
        "WHATSAPP_ACCESS_TOKEN": "${WHATSAPP_ACCESS_TOKEN}",
        "WHATSAPP_PHONE_NUMBER_ID": "${WHATSAPP_PHONE_NUMBER_ID}",
        "WHATSAPP_BUSINESS_ACCOUNT_ID": "${WHATSAPP_BUSINESS_ACCOUNT_ID}",
        "DRY_RUN": "${DRY_RUN}"
      }
    },
    "linkedin": {
      "command": "python",
      "args": ["-u", "./mcp-servers/linkedin-mcp/server.py"],
      "env": {
        "LINKEDIN_ACCESS_TOKEN": "${LINKEDIN_ACCESS_TOKEN}",
        "LINKEDIN_PAGE_ID": "${LINKEDIN_PAGE_ID}",
        "DRY_RUN": "${DRY_RUN}"
      }
    },
    "twitter": {
      "command": "python",
      "args": ["-u", "./mcp-servers/twitter-mcp/server.py"],
      "env": {
        "TWITTER_API_KEY": "${TWITTER_API_KEY}",
        "TWITTER_API_SECRET": "${TWITTER_API_SECRET}",
        "TWITTER_ACCESS_TOKEN": "${TWITTER_ACCESS_TOKEN}",
        "TWITTER_ACCESS_TOKEN_SECRET": "${TWITTER_ACCESS_TOKEN_SECRET}",
        "TWITTER_BEARER_TOKEN": "${TWITTER_BEARER_TOKEN}",
        "DRY_RUN": "${DRY_RUN}"
      }
    },
    "facebook": {
      "command": "python",
      "args": ["-u", "./mcp-servers/facebook-mcp/server.py"],
      "env": {
        "FACEBOOK_ACCESS_TOKEN": "${FACEBOOK_ACCESS_TOKEN}",
        "FACEBOOK_PAGE_ID": "${FACEBOOK_PAGE_ID}",
        "DRY_RUN": "${DRY_RUN}"
      }
    },
    "instagram": {
      "command": "python",
      "args": ["-u", "./mcp-servers/instagram-mcp/server.py"],
      "env": {
        "INSTAGRAM_ACCESS_TOKEN": "${INSTAGRAM_ACCESS_TOKEN}",
        "INSTAGRAM_ACCOUNT_ID": "${INSTAGRAM_ACCOUNT_ID}",
        "DRY_RUN": "${DRY_RUN}"
      }
    }
  }
}
