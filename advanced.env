# AI Employee Vault - Advanced Configuration
# Supports Bronze, Silver, Gold, and Platinum Phases

# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME=AI Employee Vault
APP_VERSION=2.0.0-platinum
APP_PHASE=platinum  # bronze|silver|gold|platinum

# Port configuration
PORT=${PORT:-8080}
HEALTH_PORT=${HEALTH_PORT:-8080}
DEV_MODE=${DEV_MODE:-false}
VAULT_PATH=${VAULT_PATH:-/app/vault}

# ============================================
# BRONZE PHASE CONFIGURATION
# ============================================
# Basic filesystem watcher settings
FILESYSTEM_WATCHER_ENABLED=${FILESYSTEM_WATCHER_ENABLED:-true}
DROP_FOLDER_POLL_INTERVAL=${DROP_FOLDER_POLL_INTERVAL:-10}
INBOX_POLL_INTERVAL=${INBOX_POLL_INTERVAL:-30}

# ============================================
# SILVER PHASE CONFIGURATION  
# ============================================
# Gmail watcher settings
GMAIL_WATCHER_ENABLED=${GMAIL_WATCHER_ENABLED:-false}
GMAIL_POLL_INTERVAL=${GMAIL_POLL_INTERVAL:-60}
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GMAIL_CREDENTIALS_FILE=${GMAIL_CREDENTIALS_FILE:-/app/credentials/gmail_token.json}

# Social media settings
SOCIAL_WATCHER_ENABLED=${SOCIAL_WATCHER_ENABLED:-false}
SOCIAL_POST_SCHEDULE=${SOCIAL_POST_SCHEDULE:-"0 9,13,17 * * *"}
LINKEDIN_ACCESS_TOKEN=${LINKEDIN_ACCESS_TOKEN}
TWITTER_API_KEY=${TWITTER_API_KEY}
TWITTER_API_SECRET=${TWITTER_API_SECRET}
FACEBOOK_ACCESS_TOKEN=${FACEBOOK_ACCESS_TOKEN}

# MCP server settings
EMAIL_MCP_ENABLED=${EMAIL_MCP_ENABLED:-false}
SOCIAL_MCP_ENABLED=${SOCIAL_MCP_ENABLED:-false}

# Approval workflow settings
APPROVAL_REQUIRED_FOR=${APPROVAL_REQUIRED_FOR:-["email", "social_post"]}
APPROVAL_POLL_INTERVAL=${APPROVAL_POLL_INTERVAL:-30}

# ============================================
# GOLD PHASE CONFIGURATION
# ============================================
# Accounting integration settings
ACCOUNTING_INTEGRATION_ENABLED=${ACCOUNTING_INTEGRATION_ENABLED:-false}
ODOO_URL=${ODOO_URL}
ODOO_DB_NAME=${ODOO_DB_NAME}
ODOO_USERNAME=${ODOO_USERNAME}
ODOO_PASSWORD=${ODOO_PASSWORD}

# Multi-platform social media
FACEBOOK_PAGE_ID=${FACEBOOK_PAGE_ID}
INSTAGRAM_ACCOUNT_ID=${INSTAGRAM_ACCOUNT_ID}
TWITTER_USERNAME=${TWITTER_USERNAME}

# CEO briefing settings
CEO_BRIEFING_ENABLED=${CEO_BRIEFING_ENABLED:-false}
CEO_BRIEFING_SCHEDULE=${CEO_BRIEFING_SCHEDULE:-"0 8 * * 1"}
CEO_BRIEFING_RECIPIENTS=${CEO_BRIEFING_RECIPIENTS:-admin@company.com}

# Ralph Wiggum loop settings
RALPH_LOOP_ENABLED=${RALPH_LOOP_ENABLED:-false}
RALPH_LOOP_INTERVAL=${RALPH_LOOP_INTERVAL:-300}
RALPH_LOOP_MAX_ATTEMPTS=${RALPH_LOOP_MAX_ATTEMPTS:-3}

# Error recovery settings
ERROR_RECOVERY_ENABLED=${ERROR_RECOVERY_ENABLED:-true}
AUTO_RETRY_ENABLED=${AUTO_RETRY_ENABLED:-true}
MAX_RETRY_ATTEMPTS=${MAX_RETRY_ATTEMPTS:-3}

# ============================================
# PLATINUM PHASE CONFIGURATION
# ============================================
# Agent configuration
AGENT_TYPE=${AGENT_TYPE:-legacy}  # legacy|cloud|local
AGENT_ROLE=${AGENT_ROLE:-full}    # full|cloud-draft|local-execution
CLOUD_AGENT_ENABLED=${CLOUD_AGENT_ENABLED:-false}
LOCAL_AGENT_ENABLED=${LOCAL_AGENT_ENABLED:-false}

# Vault synchronization settings
SYNC_ENABLED=${SYNC_ENABLED:-false}
SYNC_METHOD=${SYNC_METHOD:-git}  # git|syncthing
SYNC_INTERVAL=${SYNC_INTERVAL:-60}
SYNC_DIRECTION=${SYNC_DIRECTION:-bidirectional}  # bidirectional|cloud-to-local|local-to-cloud

# Git synchronization settings
GIT_REMOTE_URL=${GIT_REMOTE_URL}
GIT_BRANCH=${GIT_BRANCH:-main}
GIT_SYNC_USER=${GIT_SYNC_USER:-ai-employee}
GIT_SYNC_EMAIL=${GIT_SYNC_EMAIL:-ai-employee@noreply.com}
VAULT_SYNC_EXCLUDE=${VAULT_SYNC_EXCLUDE:-".env,*.token,*.session,secrets/,private/"}

# Claim-by-move settings
CLAIM_BY_MOVE_ENABLED=${CLAIM_BY_MOVE_ENABLED:-false}
CLAIM_TIMEOUT_SECONDS=${CLAIM_TIMEOUT_SECONDS:-3600}  # 1 hour

# Work-zone specialization
CLOUD_DRAFT_ONLY=${CLOUD_DRAFT_ONLY:-true}
LOCAL_EXECUTION_ONLY=${LOCAL_EXECUTION_ONLY:-false}

# Cloud agent specific settings
CLOUD_AGENT_URL=${CLOUD_AGENT_URL}
CLOUD_AGENT_HEALTH_CHECK_INTERVAL=${CLOUD_AGENT_HEALTH_CHECK_INTERVAL:-60}
CLOUD_AGENT_AUTO_RESTART=${CLOUD_AGENT_AUTO_RESTART:-true}

# Local agent specific settings
LOCAL_AGENT_URL=${LOCAL_AGENT_URL}
LOCAL_AGENT_HEALTH_CHECK_INTERVAL=${LOCAL_AGENT_HEALTH_CHECK_INTERVAL:-30}
LOCAL_AGENT_SYNC_ON_STARTUP=${LOCAL_AGENT_SYNC_ON_STARTUP:-true}

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Security settings for all phases
SECURITY_AUDIT_ENABLED=${SECURITY_AUDIT_ENABLED:-true}
AUDIT_LOG_RETENTION_DAYS=${AUDIT_LOG_RETENTION_DAYS:-90}
LOG_SENSITIVE_DATA=${LOG_SENSITIVE_DATA:-false}

# Encryption settings
ENCRYPTION_ENABLED=${ENCRYPTION_ENABLED:-false}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# ============================================
# MONITORING & LOGGING CONFIGURATION
# ============================================
# Logging settings
LOG_LEVEL=${LOG_LEVEL:-INFO}
LOG_FORMAT=${LOG_FORMAT:-json}
LOG_RETENTION_DAYS=${LOG_RETENTION_DAYS:-30}

# Metrics and monitoring
METRICS_ENABLED=${METRICS_ENABLED:-true}
PROMETHEUS_METRICS_PATH=${PROMETHEUS_METRICS_PATH:-/metrics}
MONITORING_INTERVAL=${MONITORING_INTERVAL:-60}

# Health check settings
HEALTH_CHECK_TIMEOUT=${HEALTH_CHECK_TIMEOUT:-10}
HEALTH_CHECK_RETRIES=${HEALTH_CHECK_RETRIES:-3}
HEALTH_CHECK_INTERVAL=${HEALTH_CHECK_INTERVAL:-30}

# ============================================
# PERFORMANCE CONFIGURATION
# ============================================
# Performance tuning
MAX_WORKERS=${MAX_WORKERS:-4}
TASK_QUEUE_SIZE=${TASK_QUEUE_SIZE:-100}
CONCURRENT_PROCESSING_LIMIT=${CONCURRENT_PROCESSING_LIMIT:-2}

# Memory and resource limits
MEMORY_LIMIT_MB=${MEMORY_LIMIT_MB:-512}
CPU_LIMIT=${CPU_LIMIT:-1.0}

# ============================================
# BACKUP & RECOVERY CONFIGURATION
# ============================================
# Backup settings
BACKUP_ENABLED=${BACKUP_ENABLED:-true}
BACKUP_SCHEDULE=${BACKUP_SCHEDULE:-"0 2 * * *"}  # Daily at 2 AM
BACKUP_RETENTION_DAYS=${BACKUP_RETENTION_DAYS:-30}
BACKUP_DESTINATION=${BACKUP_DESTINATION:-/backups}

# Disaster recovery
DISASTER_RECOVERY_ENABLED=${DISASTER_RECOVERY_ENABLED:-false}
RECOVERY_POINT_OBJECTIVE=${RECOVERY_POINT_OBJECTIVE:-3600}  # 1 hour
RECOVERY_TIME_OBJECTIVE=${RECOVERY_TIME_OBJECTIVE:-300}    # 5 minutes

# ============================================
# DEVELOPMENT & DEBUGGING CONFIGURATION
# ============================================
# Development settings
DEBUG_MODE=${DEBUG_MODE:-false}
VERBOSE_LOGGING=${VERBOSE_LOGGING:-false}
SIMULATION_MODE=${SIMULATION_MODE:-false}  # Don't perform actual actions
DRY_RUN=${DRY_RUN:-false}

# Feature flags for phased rollouts
FEATURE_FLAGS=${FEATURE_FLAGS:-[]}