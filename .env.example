# AI Employee Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# Development Mode (set to false in production)
# ============================================
DEV_MODE=true
DRY_RUN=true

# ============================================
# Context7 MCP Server
# ============================================
CONTEXT7_API_KEY=your_context7_api_key_here

# ============================================
# Google/Gmail API Credentials
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# ============================================
# WhatsApp Business API (Meta Cloud API)
# ============================================
WHATSAPP_ACCESS_TOKEN=your_meta_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# ============================================
# Facebook API
# ============================================
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_PAGE_ID=your_facebook_page_id

# ============================================
# LinkedIn API
# ============================================
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token
LINKEDIN_PAGE_ID=your_linkedin_page_id

# ============================================
# Twitter/X API v2
# ============================================
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# ============================================
# Instagram Business API
# ============================================
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_ACCOUNT_ID=your_instagram_account_id

# ============================================
# Odoo Community Edition
# ============================================
ODOO_URL=http://localhost:8069
ODOO_DB=your_database_name
ODOO_USER=your_odoo_username
ODOO_API_KEY=your_odoo_api_key

# ============================================
# Vault Paths
# ============================================
VAULT_PATH=D:\syeda Gulzar Bano\AI_Employee_Vault_
DROP_FOLDER=D:\syeda Gulzar Bano\AI_Employee_Vault_\Drop_Folder
